<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@color/colorAccentLight"
            android:id="@+id/card_view_layout">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:orientation="vertical"
                android:layout_margin="0dp"
                android:padding="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_height="0dp"
                    android:padding="4dp"
                    android:layout_margin="0dp"
                    android:text="Movement Name"
                    android:textSize="15sp"
                    android:id="@+id/movement_name" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:layout_margin="0dp"
                    android:padding="6dp"
                    android:id="@+id/hashtag_layouts">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/hashtag_layout0">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/hashtag_layout1">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/hashtag_layout2">
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/add_remove_buttons"
                android:layout_weight="0.15">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/join"
                    android:background="@color/colorAccent"
                    android:id="@+id/join"
                    android:textSize="20sp"
                    android:layout_gravity="right" />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>