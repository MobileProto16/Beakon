<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pages.MyMovementsTab">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/tab_buttons">

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:layout_height="wrap_content"
                android:text="My Movements"
                android:id="@+id/my_movements"
                android:background="@color/colorBackground" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:layout_height="wrap_content"
                android:text="Suggested"
                android:id="@+id/movements"
                android:background="@color/colorAccentLight"/>

        </LinearLayout>

        <TextView
            android:id="@+id/no_movments_message"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_my_movements"
            android:layout_below="@+id/tab_buttons"
            android:textSize="30sp"
            android:padding="30dp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"/>

        <ListView
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="456dp"
            android:id="@+id/my_movements_list"
            android:layout_below="@id/tab_buttons"></ListView>

    </RelativeLayout>

</FrameLayout>
