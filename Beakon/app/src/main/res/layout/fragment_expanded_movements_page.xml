<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin">


    <LinearLayout
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:text="Expanded Movement Name"
            android:textSize="@dimen/add_movement_title"
            android:id="@+id/expanded_movement_name"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#hello #world #welcome #home"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Number of Supporters"
        android:id="@+id/expanded_number_supporters"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:labelFor="@+id/expanded_movement_description"
        android:textSize="@dimen/add_movement_text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/expanded_movement_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps:"
        android:labelFor="@+id/expanded_movement_steps"
        android:textSize="@dimen/add_movement_text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expanded_movement_steps"
        android:layout_weight="0.23" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resources:"
        android:labelFor="@+id/expanded_movement_res"
        android:textSize="@dimen/add_movement_text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/expanded_movement_res" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:id="@+id/expanded_join_button"
        android:layout_gravity="center_horizontal"
        android:background="#3F51B5"
        android:textColor="@color/abc_background_cache_hint_selector_material_light" />


</LinearLayout>
