<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Card_View"
        android:layout_gravity = "center"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="120dp"
        card_view:cardCornerRadius="10dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:text="Movement Name"
                    android:textSize="25dp"
                    android:id="@+id/card_movement_name" />

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/check"
                    android:background="@color/colorBackground"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/join_btn"
                    android:layout_gravity="right"
                    android:layout_alignTop="@+id/card_movement_name"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src = "@drawable/x"
                    android:background="@color/colorBackground"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/reject_btn"
                    android:layout_gravity="right"
                    android:layout_alignBottom="@+id/card_movement_name"
                    android:layout_alignLeft="@+id/join_btn"
                    android:layout_alignStart="@+id/join_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#hello #world #welcome #home"
                    android:layout_below="@id/card_movement_name"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/hashes" />

                </RelativeLayout>

            </LinearLayout>

    </android.support.v7.widget.CardView>





</LinearLayout>