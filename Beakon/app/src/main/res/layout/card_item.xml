<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:weightSum="1">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Card_View"
        android:layout_gravity = "center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccentLight"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorAccentLight"
            android:id="@+id/card_view_layout">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_height="0dp"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:text="Movement Name"
                    android:textSize="15sp"
                    android:id="@+id/card_movement_name" />


                <!--<Button-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_weight="0.2"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="x"-->
                    <!--android:id="@+id/reject"-->
                    <!--android:textSize="10sp"-->
                    <!--android:layout_gravity="right"-->
                    <!--android:layout_toRightOf="@+id/join" />-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:id="@+id/hashtag_layouts">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/hashtag_layout0">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/hashtag_layout1">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/hashtag_layout2">
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_remove_buttons"
                android:layout_weight="0.3">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:text="@string/join"
                    android:background="@color/colorAccent"
                    android:id="@+id/join"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/card_movement_name"
                    android:layout_gravity="right" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:text="@string/leave"
                    android:visibility="gone"
                    android:background="@color/colorAccent"
                    android:id="@+id/leave"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/card_movement_name"
                    android:layout_gravity="right" />

            </LinearLayout>

            <!--<TableLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:shrinkColumns="*"-->
                <!--android:id="@+id/hashtag_table">-->

            <!--</TableLayout>-->


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>